<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/reviews/edit.css">
<%- include('../partials/nav') %>
<main>
  <h1>Edit Your Review</h1>
  <section>
    <form action="/games/<%= game._id %>/<%= review._id %>?_method=PUT" method="POST">
      <input type="text" name="content" value="<%= review.content %>" autocomplete="off"><br>
      <label for="rating">Rating:</label>
      <select id="rating" name="rating">
        <option value="<%= review.rating %>"><%= review.rating %></option>
        <option value="1/5">1/5</option>
        <option value="2/5">2/5</option>
        <option value="3/5">3/5</option>
        <option value="4/5">4/5</option>
        <option value="5/5">5/5</option>
      </select><br>
      <button class="edit-btn" type="submit">Submit Changes</button>
    </form>
  </section>
</main>
<%- include('../partials/footer') %>
